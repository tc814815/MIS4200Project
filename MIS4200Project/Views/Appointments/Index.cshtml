@model IEnumerable<MIS4200Project.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

<h2>Appointments Home</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.appointmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.appointmentDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.patientID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.appointmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.appointmentDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.patientID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.appointmentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.appointmentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.appointmentID })
        </td>
    </tr>
}

</table>
